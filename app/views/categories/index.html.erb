<h1>Categorias</h1>
<%= link_to 'Nova Categoria', new_category_path %><br>
<% if @categories.empty? %>
  <p>Não há categoria cadastrada</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Nome da Categoria</th>
         <th colspan="3">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= button_to 'Deletar', category, method: :delete  %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <td><%= link_to 'Produtos', filter_product_category_path(category) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>